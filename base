#include <string.h>
#include <stdio.h>
#include <stdlib.h>

#include <iostream>
#include <string>

using namespace std;



class Pet {
		static const int N=100;
	
		int eating = N;
		int leisure = N;
		int need = 0;
		int happiness =N;
		int hygiene = N;
		int health = N;
		char name[20];

	void Shower() {
			hygiene = 100;
			cout<<"\n\n		mmm,I smell like a rose	\n		<^__^>\n\n\n";
		}
	void Food() {
		eating += 40;
		need += 10;
		happiness += 20;
		hygiene -= 5;
		cout << "\n\n\n=^___^= *** ** *   mmm...delicious\n\n";
	}
	void WC() {
		need = 0;
		cout << "\n*\n **\n  ***\n\n";
	}
	void Game() {
		leisure += 30;
		eating -= 10;
		need += 5;
		happiness += 20;
		hygiene -= 20;
		cout << "   meow c:\n\n ";
		cout << "  /\\__/\\ \n";
		cout << " =|^__^|= \n";
		cout << "  /____\\ \n";
		cout << "   |  |  \n";

	}
	//add level (such as sport master )
	void Sport() {
		leisure += 5;
		eating -= 30;
		need += 20;
		happiness += 10;
		hygiene -= 30;
		cout <<"\n\n\n		*__*\n			I'm supercat!!!\n\n\n";
	} 
	//add level (such as good proprogrammer )
	void Work() {
		leisure -= 20;
		eating -= 30;
		need += 10;
		happiness -= 10;
		hygiene -= 5;
		cout<<"\n\n\n		-___-\n			work hard!!\n\n\n";
	}
	void Cure() {
		health = 100;
		cout<<"\n\n\n :)\n\n\n";
	}
	void GetName() {
		cout << "\nEnter name\n";
		cin >> name;
		cout << "\n\n   ***  Hello, " << name << "  ***\n\n";
	}
	void Show(int Condition) {
		cout << "-->" << Condition << "\n";
	}
	void CheckAll() {
		cout << "\n\n\n\n";
		cout << "hunger";
		Show(eating);
		cout << "leisure";
		Show(leisure);
		cout << "need";
		Show(need);
		cout << "happiness";
		Show(happiness);
		cout << "hygiene";
		Show(hygiene);
		cout << "health";
		Show(health);
		cout << "\n\n\n\n";
	}
	void Help() {
		cout << "\n\n************************************************\n";
		cout << "		feed\n";
		cout << "		wc\n";
		cout << "		sport\n";
		cout << "		work\n";
		cout << "		play\n";
		cout << "		cure\n";
		cout << "		exit\n";
		cout << "		shower\n";
		cout << "************************************************\n\n\n";
	}
	int PropertyOfCondition(int &condition) {
		if (condition > 100) return condition = 100;
		if (condition < 0) return condition = 0;
		if (condition > 0 && condition < 100) return condition;
	}
	void ControlProp() {
		PropertyOfCondition(eating);
		PropertyOfCondition(leisure);
		PropertyOfCondition(need);
		PropertyOfCondition(happiness);
		PropertyOfCondition(hygiene);
		PropertyOfCondition(health);
	}

public: 
	Pet() { GetName(); }
	void Changeover(int value) {
			eating -= value; 
			leisure -= value;
			need += value;
			happiness -= value;
		    hygiene -= value;
			health -= 5;
			ControlProp();
		
		}
	void ShowCondition(int &q) {
		if (eating > 80 && hygiene > 80 && need < 50 && health>80 && leisure > 80 && happiness > 80)
			cout << "\n\n\n\n		HAPPY\n\n\n\n		^_______^\n\n\n\n";
		if (eating < 20)
			cout << "\n\n				I'm starving!!Feed me NOW >:C\n\n";
		if (need == 100)
		{
			cout << "\n\n\n			ooops!!\n\n\n";
			need = 0;
			cout << "			\n*\n **\n  ***\n\n";
			cout << "\n\n\n\n			....Now I don't want pi pi...\n\n";
		}
		if (need > 80)
			cout << "\n\n	" << name << " wont pi pi \n\n";
			
		if (leisure < 40)
			cout << "		\n\nplay with me :(\n\n";
		if (happiness < 30)
			cout << "\n\n\n			T_T\n\n\n";
		if (hygiene < 30)
			cout << "\n\n		 what's that smell?...\n\n";
		if (eating == 0 && happiness == 0 && health == 0)
		{
			cout << "\n\n\n\n		...died...\n\n\n\n";
			 q=0;
		}
		ControlProp();
		
	}
	void Action(int &q)
	{
		cout << "command>>";
		string tmp;
		cin >> tmp; 
		if (tmp == "feed") Food();
		if (tmp == "wc") WC();
		if (tmp == "sport") Sport();
		if (tmp == "work") Work();
		if (tmp == "play") Game();
		if (tmp == "check") CheckAll();
		if (tmp == "cure")  Cure();
		if (tmp == "exit") q=0;
		if (tmp == "--help") Help();
		if (tmp == "shower") Shower();
	};
};

int main() {
	int exit=1;
	Pet mycat;
	int N;
	cout << "enter speedchange\n\n";
	cin >> N;
	

	while (exit != 0)
	{
		mycat.Changeover(N);
		mycat.ShowCondition(exit);
		mycat.Action(exit);
	    
	}

}
